<%= form_with(model: invoice, data: { turbo: false }) do |form| %>
  <% if invoice.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
        <% invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= form.label :invoice_number, t(:invoice_number, scope: 'forms.labels.invoices'), style: "display: block", class: "col-sm-2 control-label" %>
    <%= form.text_field :invoice_number, class: "col-sm-10 form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :invoice_date, t(:invoice_date, scope: 'forms.labels.invoices'), style: "display: block", class: "col-sm-2 control-label" %>
    <%= form.date_field :invoice_date, class: "col-sm-10 form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :customer_name, t(:customer_name, scope: 'forms.labels.invoices'), style: "display: block", class: "col-sm-2 control-label" %>
    <%= form.text_field :customer_name, class: "col-sm-10 form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :customer_notes, t(:customer_note, scope: 'forms.labels.invoices'), style: "display: block", class: "col-sm-2 control-label" %>
    <%= form.text_area :customer_notes, class: "col-sm-10 form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :total_amount_due, t(:total_amount_due, scope: 'forms.labels.invoices'), style: "display: block", class: "col-sm-2 control-label" %>
    <%= form.text_field :total_amount_due, class: "col-sm-10 form-control" %>
  </div>

  <div class="form-group">
    <%= form.label :emails, t(:emails, scope: 'forms.labels.invoices'), style: "display: block", class: "col-sm-2 control-label" %>
    <%= form.text_field :emails, class: "col-sm-10 form-control" %>
  </div>

  <div class="form-group">
    <%= form.submit t(create_or_update(invoice), scope: 'forms.buttons.invoices'), class: "btn btn-primary mt-4" %>
  </div>
<% end %>
