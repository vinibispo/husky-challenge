<%= form_with(model: invoice, data: { turbo: false }) do |form| %>
  <% if invoice.errors.any? %>
    <div style="color: red">
      <h2><%= pluralize(invoice.errors.count, "error") %> prohibited this invoice from being saved:</h2>

      <ul>
        <% invoice.errors.each do |error| %>
          <li><%= error.full_message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= form.label :invoice_number, t(:invoice_number, scope: 'forms.labels.invoices'), style: "display: block" %>
    <%= form.text_field :invoice_number %>
  </div>

  <div>
    <%= form.label :invoice_date, t(:invoice_date, scope: 'forms.labels.invoices'), style: "display: block" %>
    <%= form.date_field :invoice_date %>
  </div>

  <div>
    <%= form.label :customer_name, t(:customer_name, scope: 'forms.labels.invoices'), style: "display: block" %>
    <%= form.text_field :customer_name %>
  </div>

  <div>
    <%= form.label :customer_notes, t(:customer_note, scope: 'forms.labels.invoices'), style: "display: block" %>
    <%= form.text_area :customer_notes %>
  </div>

  <div>
    <%= form.label :total_amount_due, t(:total_amount_due, scope: 'forms.labels.invoices'), style: "display: block" %>
    <%= form.text_field :total_amount_due %>
  </div>

  <div>
    <%= form.label :emails, t(:emails, scope: 'forms.labels.invoices'), style: "display: block" %>
    <%= form.text_field :emails %>
  </div>

  <div>
    <%= form.submit t(create_or_update(invoice), scope: 'forms.buttons.invoices') %>
  </div>
<% end %>
